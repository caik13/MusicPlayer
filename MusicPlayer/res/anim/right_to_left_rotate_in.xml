        android:duration="700"
        android:fromDegrees="20"
        android:pivotX="50%p"
        android:pivotY="150%p"
        android:toDegrees="0" />

    <translate
        android:duration="500"
        android:fromXDelta="100%p"
        android:toXDelta="0%p" />

</set>