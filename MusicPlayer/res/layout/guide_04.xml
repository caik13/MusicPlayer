<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_normal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/guide_04_t"
            android:layout_width="240.0dip"
            android:layout_height="80.0dip"
            android:layout_marginTop="50.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/guide_04_t" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/guide_04_c"
            android:layout_width="240.0dip"
            android:layout_height="240.0dip"
            android:layout_marginBottom="10.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/guide_04_c" />

        <ImageButton
            android:id="@+id/guide_btn_start"
            android:layout_width="wrap_content"
            android:layout_height="50.0dip"
            android:layout_marginTop="10.0dip"
            android:scaleType="fitCenter"
            android:background="@drawable/guide_btn_start" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/guide_04_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/guide_04_b" />
    </LinearLayout>

</LinearLayout>